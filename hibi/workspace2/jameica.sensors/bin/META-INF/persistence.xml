<?xml version="1.0" encoding="iso-8859-1"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

  <persistence-unit name="jameica_sensors" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <properties>
      <!--  Die Properties werden allesamt zur Laufzeit gesetzt.
            Waer ja totaler Quatsch, Servername, User und Passwort
            hier zu definieren. Das soll der User doch via Webfrontend
            bequem aendern koennen. Wir nutzen hierzu die
            Funktion "Persistence.createEntityManagerFactory(String,Map)"
            und uebergeben in der Map alle relevanten Daten -->
    </properties>
  </persistence-unit>
</persistence>
